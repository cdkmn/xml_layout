<Scaffold>
    <attr:appBar>
        <AppBar>
            <attr:title>
                <Text>$title</Text>
            </attr:title>
        </AppBar>
    </attr:appBar>
    <attr:body>
        <ListView.separated itemCount="$itemCount">
            <attr:itemBuilder>
                <Function returnType="Widget">
                    <Script>
                        set("index", ${args[1]})
                        set("itemData", getItem($index))
                    </Script>
                    <Builder>
                        <if candidate="true">
                            <ListTile>
                                <attr:title>
                                    <Text>${itemData.title}</Text>
                                </attr:title>
                                <attr:subtitle>
                                    <Text>${itemData.subtitle}</Text>
                                </attr:subtitle>
                                <attr:leading>
                                    <Image.network>${itemData.image}</Image.network>
                                </attr:leading>
                                <attr:onTap>
                                    <Function>
                                        <Call function="$print">
                                            <Argument value="$index"/>
                                        </Call>
                                    </Function>
                                </attr:onTap>
                            </ListTile>
                        </if>
                        <else>
                            <ListTile>
                                <attr:title>
                                    <Text>what</Text>
                                </attr:title>
                                <attr:onTap>
                                    <Function>
                                        <Call function="$print">
                                            <Argument value="$index"/>
                                        </Call>
                                    </Function>
                                </attr:onTap>
                            </ListTile>
                        </else>
                    </Builder>
                </Function>
            </attr:itemBuilder>
            <attr:separatorBuilder>
                <Function returnType="Widget">
                    <Builder>
                        <Divider/>
                    </Builder>
                </Function>
            </attr:separatorBuilder>
        </ListView.separated>
    </attr:body>
</Scaffold>